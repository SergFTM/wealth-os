{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CashAccount",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "clientId": { "type": "string" },
    "entityId": { "type": "string" },
    "name": { "type": "string" },
    "bank": { "type": "string" },
    "currency": { "type": "string", "enum": ["USD", "EUR", "GBP", "CHF", "UAH"] },
    "balance": { "type": "number" },
    "baseBalance": { "type": "number" },
    "threshold": { "type": "number" },
    "status": { "type": "string", "enum": ["ok", "warning", "critical"] },
    "lastSyncAt": { "type": "string", "format": "date-time" },
    "sourceType": { "type": "string", "enum": ["bank_feed", "manual", "gl"] },
    "sourceRef": { "type": ["string", "null"] },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "clientId", "entityId", "name", "currency", "balance"]
}
