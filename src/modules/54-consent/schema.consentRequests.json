{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConsentRequest",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier" },
    "clientId": { "type": "string" },
    "requesterRefJson": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "id": { "type": "string" },
        "label": { "type": "string" }
      },
      "required": ["type", "id", "label"]
    },
    "requestTypeKey": {
      "type": "string",
      "enum": ["export", "correct", "delete", "new_access"]
    },
    "scopeJson": {
      "type": "object",
      "properties": {
        "modulesJson": { "type": "array", "items": { "type": "string" } },
        "entityIdsJson": { "type": "array", "items": { "type": "string" } },
        "docIdsJson": { "type": "array", "items": { "type": "string" } },
        "description": { "type": "string" }
      }
    },
    "statusKey": {
      "type": "string",
      "enum": ["pending", "approved", "rejected", "fulfilled"]
    },
    "dueAt": { "type": "string", "format": "date" },
    "decisionNotes": { "type": "string" },
    "linkedConsentId": { "type": "string" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "fulfilledAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "clientId", "requesterRefJson", "requestTypeKey", "scopeJson", "statusKey", "createdAt", "updatedAt"]
}
