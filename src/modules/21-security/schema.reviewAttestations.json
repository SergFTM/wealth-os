{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReviewAttestation",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "reviewId": { "type": "string" },
    "userId": { "type": "string" },
    "roleBindingId": { "type": "string" },
    "decision": { "type": "string", "enum": ["keep", "revoke", "modify", "pending"] },
    "reviewerId": { "type": "string" },
    "comment": { "type": "string" },
    "decidedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "reviewId", "userId", "decision"]
}
