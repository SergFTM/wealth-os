{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecurityIncident",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "clientId": { "type": "string" },
    "incidentType": { "type": "string", "enum": ["suspicious_login", "policy_violation", "mfa_bypass", "data_export", "role_change", "failed_auth", "session_anomaly"] },
    "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
    "status": { "type": "string", "enum": ["open", "investigating", "resolved", "dismissed"] },
    "userId": { "type": "string" },
    "sessionId": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "evidenceRefsJson": { "type": "string" },
    "remediationSteps": { "type": "string" },
    "assigneeId": { "type": "string" },
    "resolutionNotes": { "type": "string" },
    "createdAt": { "type": "string", "format": "date-time" },
    "resolvedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "incidentType", "severity", "status", "title"]
}
