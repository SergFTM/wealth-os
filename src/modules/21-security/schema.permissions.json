{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Permission",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "clientId": { "type": "string" },
    "roleId": { "type": "string" },
    "moduleKey": { "type": "string" },
    "actionKey": { "type": "string", "enum": ["view", "create", "edit", "approve", "export"] },
    "scopeType": { "type": "string", "enum": ["global", "household", "entity", "portfolio"] },
    "allow": { "type": "boolean" },
    "clientSafeAllow": { "type": "boolean" },
    "createdAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "roleId", "moduleKey", "actionKey"]
}
