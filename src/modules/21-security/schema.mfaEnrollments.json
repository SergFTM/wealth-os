{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MfaEnrollment",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "clientId": { "type": "string" },
    "userId": { "type": "string" },
    "method": { "type": "string", "enum": ["app", "sms", "hardware", "email"] },
    "status": { "type": "string", "enum": ["enrolled", "not_enrolled", "pending"] },
    "enrolledAt": { "type": "string", "format": "date-time" },
    "lastUsedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "userId", "status"]
}
