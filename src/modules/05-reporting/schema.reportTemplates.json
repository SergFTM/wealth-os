{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReportTemplate",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "audience": { "type": "string", "enum": ["committee", "client", "advisor", "internal"] },
    "defaultSections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "title": { "type": "string" },
          "visibility": { "type": "string", "enum": ["internal", "client"] },
          "order": { "type": "integer" }
        }
      }
    },
    "isActive": { "type": "boolean", "default": true },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "name", "audience", "defaultSections"]
}
