{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MDM Accounts Record",
  "description": "Golden Record for accounts: bank, custodian, broker accounts",
  "type": "object",
  "required": ["id", "clientId", "status", "accountTypeKey", "chosenJson", "createdAt", "updatedAt"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier"
    },
    "clientId": {
      "type": "string",
      "description": "Client/household reference"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "merged", "pending_review"],
      "description": "Record status"
    },
    "accountTypeKey": {
      "type": "string",
      "enum": ["bank", "custodian", "broker", "crypto_wallet", "retirement", "escrow"],
      "description": "Type of account"
    },
    "chosenJson": {
      "type": "object",
      "description": "Golden record chosen field values",
      "properties": {
        "accountName": { "type": "string" },
        "institution": { "type": "string" },
        "accountNumber": { "type": "string" },
        "accountNumberMasked": { "type": "string" },
        "currency": { "type": "string" },
        "iban": { "type": "string" },
        "swift": { "type": "string" },
        "routingNumber": { "type": "string" },
        "openedDate": { "type": "string", "format": "date" },
        "relationship": { "type": "string" }
      }
    },
    "sourcesJson": {
      "type": "array",
      "description": "Source system values",
      "items": {
        "type": "object",
        "properties": {
          "sourceSystem": { "type": "string" },
          "sourceId": { "type": "string" },
          "asOf": { "type": "string", "format": "date-time" },
          "fieldsJson": { "type": "object" }
        }
      }
    },
    "confidenceJson": {
      "type": "object",
      "description": "Confidence scores per field (0-100)",
      "additionalProperties": { "type": "number" }
    },
    "overridesJson": {
      "type": "object",
      "description": "Manual override flags and values per field",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "value": {},
          "overriddenAt": { "type": "string", "format": "date-time" },
          "overriddenBy": { "type": "string" },
          "reason": { "type": "string" }
        }
      }
    },
    "linkedEntityId": {
      "type": "string",
      "description": "Link to owning entity"
    },
    "dqScore": {
      "type": "number",
      "description": "Data quality score (0-100)"
    },
    "mergedIntoId": {
      "type": "string",
      "description": "If merged, points to surviving record"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}
