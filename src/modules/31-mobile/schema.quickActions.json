{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuickAction",
  "type": "object",
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "clientId": { "type": "string", "format": "uuid" },
    "userId": { "type": "string", "format": "uuid" },
    "audience": {
      "type": "string",
      "enum": ["staff", "client", "both"],
      "default": "staff"
    },
    "actionType": {
      "type": "string",
      "enum": ["approve_item", "view_risk_alert", "open_report", "open_task", "open_thread", "view_document", "pay_invoice"]
    },
    "title": { "type": "string", "minLength": 1, "maxLength": 200 },
    "description": { "type": "string", "maxLength": 500 },
    "icon": { "type": "string" },
    "deepLink": { "type": "string" },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "default": "medium"
    },
    "conditionJson": {
      "type": "object",
      "properties": {
        "role": { "type": "array", "items": { "type": "string" } },
        "severity": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "array", "items": { "type": "string" } }
      }
    },
    "sourceType": { "type": "string" },
    "sourceId": { "type": "string", "format": "uuid" },
    "priority": { "type": "integer", "minimum": 0, "maximum": 100, "default": 50 },
    "status": {
      "type": "string",
      "enum": ["active", "completed", "expired", "dismissed"],
      "default": "active"
    },
    "expiresAt": { "type": "string", "format": "date-time" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "clientId", "audience", "actionType", "title", "deepLink", "createdAt"]
}
