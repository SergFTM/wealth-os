{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CashScenario",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier" },
    "clientId": { "type": "string", "description": "Client reference" },
    "name": { "type": "string", "description": "Scenario name" },
    "scenarioType": {
      "type": "string",
      "enum": ["base", "conservative", "aggressive", "custom"],
      "description": "Scenario type"
    },
    "description": { "type": "string", "description": "Scenario description" },
    "adjustmentsJson": {
      "type": "object",
      "description": "Scenario adjustments",
      "properties": {
        "inflowHaircut": { "type": "number", "description": "Percentage reduction on inflows" },
        "outflowIncrease": { "type": "number", "description": "Percentage increase on outflows" },
        "distributionDelayDays": { "type": "integer", "description": "Days to delay distributions" },
        "capitalCallShiftDays": { "type": "integer", "description": "Days to shift capital calls earlier" },
        "interestRateShock": { "type": "number", "description": "Interest rate shock in bps" },
        "customRules": { "type": "array", "items": { "type": "object" } }
      }
    },
    "isDefault": { "type": "boolean", "description": "Whether this is a default scenario" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "clientId", "name", "scenarioType", "adjustmentsJson", "createdAt"]
}
