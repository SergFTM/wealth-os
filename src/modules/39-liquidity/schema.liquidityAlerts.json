{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LiquidityAlert",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier" },
    "clientId": { "type": "string", "description": "Client reference" },
    "forecastId": { "type": "string", "description": "Reference to forecast" },
    "scenarioId": { "type": "string", "description": "Reference to scenario" },
    "stressTestId": { "type": "string", "description": "Reference to stress test if generated from one" },
    "deficitDate": { "type": "string", "format": "date", "description": "Date of projected deficit" },
    "shortfallAmount": { "type": "number", "description": "Amount of shortfall" },
    "currency": { "type": "string", "description": "Currency of shortfall" },
    "severity": {
      "type": "string",
      "enum": ["critical", "warning", "info"],
      "description": "Alert severity"
    },
    "status": {
      "type": "string",
      "enum": ["open", "acknowledged", "closed"],
      "description": "Alert status"
    },
    "title": { "type": "string", "description": "Alert title" },
    "description": { "type": "string", "description": "Alert description" },
    "suggestedActionsJson": {
      "type": "array",
      "description": "Suggested remediation actions",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "description": { "type": "string" },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      }
    },
    "sourcesJson": {
      "type": "array",
      "description": "Sources that contributed to alert",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "id": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "acknowledgedAt": { "type": "string", "format": "date-time" },
    "acknowledgedBy": { "type": "string" },
    "closedAt": { "type": "string", "format": "date-time" },
    "closedBy": { "type": "string" },
    "closedReason": { "type": "string" },
    "taskId": { "type": "string", "description": "Reference to created task" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "clientId", "forecastId", "deficitDate", "shortfallAmount", "currency", "severity", "status", "createdAt"]
}
