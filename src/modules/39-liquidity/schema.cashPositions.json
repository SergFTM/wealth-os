{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CashPosition",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier" },
    "clientId": { "type": "string", "description": "Client reference" },
    "scopeType": { "type": "string", "enum": ["household", "entity", "portfolio", "account"], "description": "Scope level" },
    "scopeId": { "type": "string", "description": "Reference to scope object" },
    "accountName": { "type": "string", "description": "Account name" },
    "entityName": { "type": "string", "description": "Entity name" },
    "currency": { "type": "string", "description": "Currency code (USD, EUR, etc.)" },
    "balance": { "type": "number", "description": "Current balance" },
    "asOf": { "type": "string", "format": "date-time", "description": "Position as-of date" },
    "sourceType": { "type": "string", "enum": ["manual", "custodian", "bank", "gl"], "description": "Data source type" },
    "sourceId": { "type": "string", "description": "Reference to source record" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "clientId", "scopeType", "accountName", "currency", "balance", "asOf", "createdAt"]
}
