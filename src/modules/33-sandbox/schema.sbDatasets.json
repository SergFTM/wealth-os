{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sandbox Dataset",
  "description": "Dataset template pack for sandbox testing",
  "type": "object",
  "required": ["id", "clientId", "name", "updatedAt"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier"
    },
    "clientId": {
      "type": "string",
      "description": "Client/tenant identifier"
    },
    "name": {
      "type": "string",
      "description": "Dataset name"
    },
    "description": {
      "type": "string",
      "description": "Dataset description"
    },
    "templateType": {
      "type": "string",
      "enum": ["family_office_demo", "private_capital_heavy", "high_volume_transactions", "minimal", "custom"],
      "default": "family_office_demo"
    },
    "includesJson": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Collections included in dataset"
    },
    "statsJson": {
      "type": "object",
      "description": "Dataset statistics (record counts, sizes)",
      "properties": {
        "totalRecords": { "type": "number" },
        "collections": { "type": "number" },
        "sizeKb": { "type": "number" }
      }
    },
    "status": {
      "type": "string",
      "enum": ["active", "archived"],
      "default": "active"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}
