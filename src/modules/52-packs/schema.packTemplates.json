{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PackTemplate",
  "description": "Reusable template for pack creation",
  "type": "object",
  "required": ["id", "clientId", "name", "audienceKey", "defaultClientSafe", "defaultSensitivityKey", "createdAt"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique template identifier"
    },
    "clientId": {
      "type": "string",
      "description": "Client/family identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Template name"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Template description"
    },
    "audienceKey": {
      "type": "string",
      "enum": ["auditor", "bank", "tax", "legal", "committee", "investor", "regulator", "general"],
      "description": "Target audience"
    },
    "defaultClientSafe": {
      "type": "boolean",
      "default": true,
      "description": "Default client-safe setting"
    },
    "defaultSensitivityKey": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "default": "medium",
      "description": "Default sensitivity level"
    },
    "defaultWatermarkKey": {
      "type": "string",
      "enum": ["on", "off"],
      "default": "on",
      "description": "Default watermark setting"
    },
    "defaultItemsJson": {
      "type": "array",
      "description": "Default items to include",
      "items": {
        "type": "object",
        "properties": {
          "itemTypeKey": {
            "type": "string",
            "enum": ["document", "export", "snapshot", "cover_letter", "checklist"]
          },
          "title": {
            "type": "string"
          },
          "refJson": {
            "type": "object",
            "properties": {
              "collection": {
                "type": "string"
              },
              "id": {
                "type": "string"
              },
              "query": {
                "type": "object",
                "description": "Query to find matching items"
              }
            }
          },
          "required": {
            "type": "boolean",
            "default": false
          },
          "clientSafe": {
            "type": "boolean",
            "default": true
          }
        }
      }
    },
    "coverLetterTemplateMd": {
      "type": "string",
      "description": "Template for cover letter with placeholders"
    },
    "usageCount": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of times template was used"
    },
    "createdByUserId": {
      "type": "string",
      "description": "User who created the template"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}
