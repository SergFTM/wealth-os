{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PackItem",
  "description": "Individual item within a pack",
  "type": "object",
  "required": ["id", "clientId", "packId", "itemTypeKey", "title", "include", "clientSafe", "sensitivityKey", "orderIndex", "createdAt"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique item identifier"
    },
    "clientId": {
      "type": "string",
      "description": "Client/family identifier"
    },
    "packId": {
      "type": "string",
      "description": "Parent pack ID"
    },
    "itemTypeKey": {
      "type": "string",
      "enum": ["document", "export", "snapshot", "cover_letter", "checklist"],
      "description": "Type of item"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 300,
      "description": "Item title"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Optional description"
    },
    "refJson": {
      "type": "object",
      "description": "Reference to source item",
      "properties": {
        "collection": {
          "type": "string",
          "description": "Source collection name"
        },
        "id": {
          "type": "string",
          "description": "Source item ID"
        },
        "version": {
          "type": "string",
          "description": "Optional version reference"
        }
      }
    },
    "contentMd": {
      "type": "string",
      "description": "Markdown content for generated items (cover_letter, checklist)"
    },
    "include": {
      "type": "boolean",
      "default": true,
      "description": "Whether to include in final pack"
    },
    "clientSafe": {
      "type": "boolean",
      "default": true,
      "description": "Client-safe flag"
    },
    "sensitivityKey": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "default": "low",
      "description": "Sensitivity level"
    },
    "orderIndex": {
      "type": "integer",
      "minimum": 0,
      "description": "Display order"
    },
    "fileSize": {
      "type": "integer",
      "description": "File size in bytes if applicable"
    },
    "fileType": {
      "type": "string",
      "description": "File MIME type if applicable"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}
