{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PCCommitment",
  "type": "object",
  "required": ["id", "fundId", "clientId", "entityId", "amountCommitted", "currency", "status"],
  "properties": {
    "id": { "type": "string" },
    "fundId": { "type": "string" },
    "clientId": { "type": "string" },
    "entityId": { "type": "string" },
    "amountCommitted": { "type": "number" },
    "amountCalled": { "type": "number", "default": 0 },
    "amountDistributed": { "type": "number", "default": 0 },
    "unfunded": { "type": "number" },
    "currency": { "type": "string", "default": "USD" },
    "status": { 
      "type": "string",
      "enum": ["active", "fully_called", "closed"]
    },
    "asOf": { "type": "string", "format": "date" },
    "notes": { "type": ["string", "null"] },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  }
}
