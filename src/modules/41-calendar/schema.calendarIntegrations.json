{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CalendarIntegration",
  "type": "object",
  "required": ["id", "clientId", "providerKey", "status"],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "clientId": { "type": "string" },
    "providerKey": {
      "type": "string",
      "enum": ["google", "microsoft", "webcal", "apple"],
      "description": "Integration provider"
    },
    "status": {
      "type": "string",
      "enum": ["disabled", "configured", "connected", "error"],
      "default": "disabled"
    },
    "configJson": {
      "type": "object",
      "properties": {
        "calendarId": { "type": "string" },
        "syncDirection": { "type": "string", "enum": ["import", "export", "bidirectional"] },
        "filterTags": { "type": "array", "items": { "type": "string" } },
        "lastSyncAt": { "type": "string", "format": "date-time" },
        "syncFrequencyMinutes": { "type": "integer", "default": 15 }
      }
    },
    "errorMessage": { "type": "string" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  }
}
