{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PhilProgram",
  "description": "Charitable program or theme",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier" },
    "clientId": { "type": "string", "description": "Client/family ID" },
    "entityId": { "type": "string", "description": "Parent entity ID" },
    "name": { "type": "string", "description": "Program name" },
    "themeKey": {
      "type": "string",
      "enum": ["education", "health", "climate", "community", "arts", "humanitarian"],
      "description": "Thematic area"
    },
    "ownerUserId": { "type": "string", "description": "Program owner user ID" },
    "status": {
      "type": "string",
      "enum": ["active", "archived"],
      "description": "Program status"
    },
    "goalsMarkdown": { "type": "string", "description": "Program goals (markdown)" },
    "criteriaJson": {
      "type": "array",
      "description": "Grant eligibility criteria",
      "items": {
        "type": "object",
        "properties": {
          "criterion": { "type": "string" },
          "required": { "type": "boolean" }
        }
      }
    },
    "geoPrefsJson": {
      "type": "array",
      "description": "Preferred geographies",
      "items": { "type": "string" }
    },
    "exclusionsJson": {
      "type": "array",
      "description": "Exclusion criteria",
      "items": { "type": "string" }
    },
    "kpiTargetsJson": {
      "type": "array",
      "description": "KPI metric targets",
      "items": {
        "type": "object",
        "properties": {
          "metric": { "type": "string" },
          "targetValue": { "type": "number" },
          "unit": { "type": "string" }
        }
      }
    },
    "annualBudget": { "type": "number", "description": "Annual budget allocation" },
    "currency": { "type": "string", "default": "USD" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "clientId", "name", "themeKey", "status", "createdAt", "updatedAt"]
}
