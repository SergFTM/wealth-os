{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DealTransaction",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier" },
    "clientId": { "type": "string", "description": "Client/tenant ID" },
    "dealId": { "type": "string", "description": "Associated deal ID" },
    "txDate": { "type": "string", "format": "date-time", "description": "Transaction date" },
    "txType": { "type": "string", "enum": ["buy", "sell", "fee", "distribution", "call", "dividend"], "description": "Transaction type" },
    "amount": { "type": "number", "description": "Transaction amount" },
    "currency": { "type": "string", "default": "USD" },
    "units": { "type": "number", "description": "Number of units/shares" },
    "pricePerUnit": { "type": "number", "description": "Price per unit" },
    "counterparty": { "type": "string", "description": "Counterparty" },
    "status": { "type": "string", "enum": ["draft", "pending", "posted", "reversed"], "default": "draft" },
    "glRefId": { "type": "string", "description": "GL transaction reference ID" },
    "asOfDate": { "type": "string", "format": "date-time", "description": "As-of date for accounting" },
    "sourceRefsJson": { "type": "string", "description": "JSON array of source references" },
    "notes": { "type": "string", "description": "Notes" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "clientId", "dealId", "txDate", "txType", "amount", "currency", "status"]
}
