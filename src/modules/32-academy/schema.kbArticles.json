{
  "collection": "kbArticles",
  "description": "Knowledge base articles, guides, SOPs",
  "fields": {
    "id": { "type": "string", "required": true, "primary": true },
    "clientId": { "type": "string", "required": true },
    "titleRu": { "type": "string", "required": true },
    "titleEn": { "type": "string" },
    "titleUk": { "type": "string" },
    "bodyRu": { "type": "string", "required": true },
    "bodyEn": { "type": "string" },
    "bodyUk": { "type": "string" },
    "tagsJson": { "type": "array", "items": "string" },
    "audience": { "type": "enum", "values": ["staff", "client", "both"], "default": "staff" },
    "status": { "type": "enum", "values": ["draft", "published", "archived"], "default": "draft" },
    "attachmentsDocIdsJson": { "type": "array", "items": "string" },
    "relatedModuleKeysJson": { "type": "array", "items": "string" },
    "authorId": { "type": "string" },
    "viewCount": { "type": "number", "default": 0 },
    "createdAt": { "type": "datetime", "required": true },
    "updatedAt": { "type": "datetime", "required": true }
  },
  "indexes": ["clientId", "status", "audience", "tagsJson"]
}
