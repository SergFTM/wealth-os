{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DemoScenario",
  "type": "object",
  "required": ["id", "name", "description", "stepsJson"],
  "properties": {
    "id": { "type": "string", "description": "Unique identifier" },
    "name": { "type": "string", "description": "Scenario name" },
    "description": { "type": "string", "description": "Scenario description" },
    "stepsJson": { "type": "string", "description": "JSON array of scenario steps" },
    "category": { "type": "string", "enum": ["investor", "operations", "finance", "compliance", "reporting"] },
    "duration": { "type": "string", "description": "Estimated duration" },
    "persona": { "type": "string", "description": "Recommended persona role" },
    "isActive": { "type": "boolean", "description": "Currently running" },
    "completedSteps": { "type": "number", "description": "Number of completed steps" },
    "createdAt": { "type": "string", "format": "date-time" }
  }
}
