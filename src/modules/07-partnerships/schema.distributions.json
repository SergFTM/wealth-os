{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Distribution",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "partnershipId": { "type": "string" },
    "ownerId": { "type": "string" },
    "date": { "type": "string", "format": "date" },
    "type": { "type": "string", "enum": ["cash", "in_kind", "return_of_capital", "fee"] },
    "amount": { "type": "number" },
    "currency": { "type": "string" },
    "status": { "type": "string", "enum": ["draft", "pending", "posted"] },
    "docIds": { "type": "array", "items": { "type": "string" } },
    "sourceRef": { "type": ["string", "null"] },
    "notes": { "type": ["string", "null"] },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "partnershipId", "ownerId", "date", "type", "amount", "currency", "status"]
}
