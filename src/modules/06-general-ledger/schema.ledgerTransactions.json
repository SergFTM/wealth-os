{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ledger Transaction",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "entityId": { "type": "string" },
    "date": { "type": "string", "format": "date" },
    "periodId": { "type": "string" },
    "accountId": { "type": "string" },
    "amount": { "type": "number" },
    "currency": { "type": "string" },
    "fxRate": { "type": "number", "default": 1 },
    "baseAmount": { "type": "number" },
    "sourceType": { "type": "string", "enum": ["manual", "bank", "custodian", "billpay", "invoice", "payroll"] },
    "sourceRef": { "type": ["string", "null"] },
    "entryId": { "type": ["string", "null"] },
    "reconciled": { "type": "boolean", "default": false },
    "reconId": { "type": ["string", "null"] },
    "docIds": { "type": "array", "items": { "type": "string" } },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "entityId", "date", "accountId", "amount"]
}
