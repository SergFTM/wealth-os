{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Accounting Period",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "entityId": { "type": "string" },
    "name": { "type": "string", "description": "e.g. 2026-01" },
    "startDate": { "type": "string", "format": "date" },
    "endDate": { "type": "string", "format": "date" },
    "status": { "type": "string", "enum": ["open", "closing", "closed"] },
    "closeChecklist": {
      "type": "object",
      "properties": {
        "journalsPosted": { "type": "boolean", "default": false },
        "fxRatesPresent": { "type": "boolean", "default": false },
        "reconciliationsComplete": { "type": "boolean", "default": false },
        "approvalsComplete": { "type": "boolean", "default": false }
      }
    },
    "closedBy": { "type": ["string", "null"] },
    "closedAt": { "type": ["string", "null"], "format": "date-time" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "entityId", "name", "startDate", "endDate", "status"]
}
