{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CommSlaPolicy",
  "type": "object",
  "required": ["id", "threadType", "slaHours"],
  "properties": {
    "id": { "type": "string", "description": "Unique policy ID" },
    "clientId": { "type": ["string", "null"], "description": "Client-specific policy or null for default" },
    "threadType": {
      "type": "string",
      "enum": ["request", "approval", "incident", "advisor", "client_service"],
      "description": "Thread type this policy applies to"
    },
    "slaHours": { "type": "number", "description": "Hours until SLA deadline" },
    "escalationHours": { "type": ["number", "null"], "description": "Hours after SLA to auto-escalate" },
    "isActive": { "type": "boolean", "default": true }
  }
}
