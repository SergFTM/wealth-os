{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CaseComment",
  "type": "object",
  "required": ["id", "clientId", "caseId", "authorSubjectType", "authorId", "visibility", "body", "createdAt"],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "clientId": { "type": "string", "format": "uuid" },
    "caseId": { "type": "string", "format": "uuid" },
    "authorSubjectType": {
      "type": "string",
      "enum": ["user", "client", "system"]
    },
    "authorId": { "type": "string" },
    "authorName": { "type": ["string", "null"] },
    "authorRole": { "type": ["string", "null"] },
    "visibility": {
      "type": "string",
      "enum": ["internal", "client"]
    },
    "body": { "type": "string", "minLength": 1, "maxLength": 20000 },
    "bodyHtml": { "type": ["string", "null"] },
    "attachmentDocIdsJson": { "type": ["string", "null"] },
    "isSystemGenerated": { "type": "boolean", "default": false },
    "actionType": {
      "type": ["string", "null"],
      "enum": ["status_change", "assignment", "escalation", "sla_breach", "link_added", "task_created", null]
    },
    "actionMetadataJson": { "type": ["string", "null"] },
    "createdAt": { "type": "string", "format": "date-time" }
  }
}
