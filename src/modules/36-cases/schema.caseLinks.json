{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CaseLink",
  "type": "object",
  "required": ["id", "clientId", "caseId", "linkedType", "linkedId", "createdAt"],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "clientId": { "type": "string", "format": "uuid" },
    "caseId": { "type": "string", "format": "uuid" },
    "linkedType": {
      "type": "string",
      "enum": ["invoice", "document", "portfolio", "exception", "syncjob", "report", "task", "thread", "entity", "account"]
    },
    "linkedId": { "type": "string" },
    "linkedName": { "type": ["string", "null"] },
    "linkedUrl": { "type": ["string", "null"] },
    "linkReason": { "type": ["string", "null"], "maxLength": 500 },
    "createdByUserId": { "type": ["string", "null"] },
    "createdByUserName": { "type": ["string", "null"] },
    "createdAt": { "type": "string", "format": "date-time" }
  }
}
